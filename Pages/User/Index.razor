        else
        {
           
        }
    }

    private void CancelEdit()
    {
        showModal = false;
    }

    private async Task DeleteUser(UserRequest user)
    {
        var response = await UserService.DeleteUser(user.Id);
        if (response.IsSuccessStatusCode)
        {
            await LoadUsers(PageNumber);
        }
    }

}
