        else
        {
           
        }
    }

    private void CancelEdit()
    {
        showModal = false;
    }

    private async Task DeleteRole(Role role)
    {
        var response = await RoleService.DeleteRole(role.Id);
        if (response.IsSuccessStatusCode)
        {
            await LoadRoles(PageNumber);
        }
    }

}
